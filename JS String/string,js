
// Define two or more strings
var string1 = "Hello, ";
var string2 = "world!";
var string3 = " Welcome to string methods in JavaScript.";

// Use the concat() method to connect the strings
var concatenatedString = string1.concat(string2, string3);

function concat_function(){
document.getElementById("concatString").innerHTML = concatenatedString;
}

function slice_method(){
    var sentence = "All work and no play makes Johnny a dull boy";
    var section = sentence.slice (27, 33);
    document.getElementById("Slice").innerHTML = section;
}

function slice_method2(){
    var sentence2 = "I work at The Tech Academy.";
    var section2 = sentence2.slice (7, 13);
    document.getElementById("Slice2").innerHTML = section2;
}

//convert to uppercase
var original_string= "good morning";

var convert_to_uppercase = original_string.toUpperCase();

function convertU(){
    document.getElementById("convertS").innerHTML = convert_to_uppercase;
}
//convert to string
var x= 127997;

var num_to_string = x.toString();

function convertU(){
    document.getElementById("convertNew").innerHTML = num_to_string;
}
//specified the length of the number

var x= 127997.197291;

function toPres(){
    document.getElementById("toPresID").innerHTML = x.toPrecision(8)
}
//specified the length of the decimal

var x= 127997.19729186;
var fixedNum= x.toFixed(3);

function toFix_function(){
    document.getElementById("tofix").innerHTML =fixedNum;
}
